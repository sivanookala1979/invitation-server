<%= get_index_text("Groups") %>
<table class="table table-bordered ">
  <tr class="table_style">
    <th>Group name</th>
    <th>Owner</th>
    <th>Contact number</th>
    <th></th>
    <th></th>
    <th>Group Members</th>
  </tr>

  <% @groups.each do |group| %>
      <tr>
        <td><%= group.group_name %></td>
        <td><%= group.owner_id %></td>
        <td><%= group.contact_numbers %></td>
        <td><%= link_to 'Edit', edit_group_path(group) %></td>
        <td><%= link_to 'Destroy', group, confirm: 'Are you sure?', method: :delete %></td>
        <td><a href="/groups/group_members_list?group_id=<%= group.id %>">Group Members</a></td>
      </tr>
  <% end %>
</table>

