<%= form_for(@city) do |f| %>
    <% if @city.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@city.errors.count, "error") %> prohibited this city from being saved:</h2>

          <ul>
            <% @city.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="row">
      <div class="col-sm-8">
        <div class="form-group">
          <%= f.label :name, :class => 'control-label' %>
          <br/>
          <%= f.text_field :name, :placeholder => 'Name', :class => 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :image_id, :class => 'control-label' %>
          <br/>
          <%= f.file_field :image_id %>
        </div>
        <div class="form-group">
          <%= f.label :active, :class => 'control-label' %>
          <br/>
          <%= f.check_box :active %>
        </div>
        <div class="form-group">
          <%= f.label :latitude, :class => 'control-label' %>
          <br/>
          <%= f.text_field :latitude, :placeholder => 'Latitude', :class => 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :longitude, :class => 'control-label' %>
          <br/>
          <%= f.text_field :longitude, :placeholder => 'Longitude', :class => 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :remarks, :class => 'control-label' %>
          <br/>
          <%= f.text_area :remarks, :placeholder => 'Remarks',   :class => 'form-control',:size=>"100*4"  %>
        </div>
        <div class="form-group">
          <%= f.label :pincode, :class => 'control-label' %>
          <br/>
          <%= f.text_field :pincode, :placeholder => 'pin code', :class => 'form-control' %>
        </div>
        <div class="actions">
          <%= f.submit(:class => 'btn btn-primary') %>
        </div>
      </div>
    </div>
<% end %>
